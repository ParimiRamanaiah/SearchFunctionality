  "private": true,
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.14.2",
    "@cap-js/hana": "^1",
    "@sap/cds": "^8",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.9.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-search": "cds watch --open search/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy Search --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "auth": "mocked",
      "html5-repo": true
    },
    "sql": {
      "native_hana_associations": false
    }
  }
